<body>

  <!-- Page Content -->
  <div class="container">

    <div class="row">

      <!-- Blog Entries Column -->
      <div class="col-md-8 col-md-offset-2">

        <h1 class="my-4">Web design
          <small>Designing Your Life</small>
        </h1>

        <!-- Blog Post -->
        <% @post_arr.each do |post| %>
          <div class="card mb-4">
            <img class="card-img-top" src=<%= post.img_url %> alt="Card image cap">
            <div class="card-body">
              <h2 class="card-title"><%= post.title %></h2>
              <p class="card-text"><%= post.content[0, 300] %>...</p>
              <%= link_to "Read More", post, class: "btn btn-primary" %>
            </div>
            <div class="card-footer text-muted">
              Posted on <%= post.created_at %> by
              <% user = @user_arr.find_by(id: post.user_id) %>
              <%= link_to user.name, user %>
            </div>
          </div>
          <hr>
        <% end %>

        <!-- Pagination -->
        <ul class="pagination justify-content-center mb-4">
          <li class="page-item">
            <a class="page-link" href="#">&larr; Older</a>
          </li>
          <li class="page-item disabled">
            <a class="page-link" href="#">Newer &rarr;</a>
          </li>
        </ul>

      </div>

  </div>
  <!-- /.container -->

</body>
