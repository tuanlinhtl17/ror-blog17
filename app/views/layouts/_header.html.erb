<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to "YelpCamp", root_path, id: "logo"%>
    </div>


    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <form action="/search" class="navbar-form navbar-left">
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Search..." name="search">
          <button type="submit" class="btn btn-default">Search</button>
        </div>
      </form>

      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "Hot post", hotpost_path %></li>
          <% if logged_in? %>
            <li><%= link_to "New post", newpost_path %></li>

            <% if current_user.admin? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Admin <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Users", users_path %></li>
                <li><%= link_to "posts", posts_path %></li>
              </ul>
            </li>
            <% end %>

            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Account <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", current_user %></li>
                <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                <li><%= link_to "Bookmarked", bookmarked_user_path(current_user) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Log out", logout_path, method: :delete %>
                </li>
              </ul>
            </li>
            <li><a href="#">Hello <%= current_user.name %></a></li>
          <% else %>
            <li><%= link_to "Log in", login_path %></li>
            <li><a href="#">Hello guest</a></li>
          <% end %>

      </ul>

    </div>
  </div>
</header>
