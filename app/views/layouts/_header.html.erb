<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "YelpCamp", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "Hot post", hotpost_path %></li>
          <% if logged_in? %>
            <li><%= link_to "New post", newpost_path %></li>

            <% if current_user.admin? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Admin <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Users", users_path %></li>
                <li><%= link_to "posts", posts_path %></li>
              </ul>
            </li>
            <% end %>

            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Account <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", current_user %></li>
                <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                <li><%= link_to "Bookmarked", bookmarked_user_path(current_user) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Log out", logout_path, method: :delete %>
                </li>
              </ul>
            </li>
            <li><a href="#">Hello <%= current_user.name %></a></li>
          <% else %>
            <li><%= link_to "Log in", login_path %></li>
            <li><a href="#">Hello guest</a></li>
          <% end %>

      </ul>
    </nav>
  </div>
</header>
