<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= image_tag(@user.avatar_url, alt: @user.name, class: "show_avatar") %>
      <h3><%= @user.name %></h3>
      <span><%= link_to "view my profile", @user %></span>
      <span><b>Microposts:</b> <%= @user.posts.count %></span>
    </section>
    <section class="stats">
      <%= render "shared/stats" %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users follow">
        <%= render @users %>
      </li>
      </ul>
    <% end %>
  </div>
</div>
